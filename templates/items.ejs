<body>
        <nav class="navbar navbar-light bg-primary text-white">
                <a class="navbar-brand ">DJOLX</a>
                <div class="navbar nav">
                       <div class="nav-item"> <form class="form-inline" action="/home" method="GET">
                                <input class="form-control mr-sm-2" type="text" name="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                              </form>
                            </div>
                            <nav class="navbar">
                                    <a class="btn btn-warning" href="/add-items">ADD ITEM </a>
                            </nav>
                            <nav class="navbarlogout">
                                <a class="btn btn-danger"href="/logout">LOGOUT</a>
                            </nav>
                </div>
                
              </nav>
              <% if(item) { %>
              <div class="card text-center" style="width: 18rem;margin-left:20rem;margin-top:3rem;float: left;height:20rem;border:none">
                    <img src="images/<%=item.image%>" class="card-img-top" alt="...">
                    <p class="card-body">
                      <h5 class="card-title">Title: <%=item.title%></h5>
                      <h5 class="card-text">Description:<%=item.description%></h5><br>
                      <h5 class="card-title">Condition:<%=item.conditions%></h5>
                      <h5 class="card-title">Price:<%=item.price%></h5>
                      
                    </p>
                  </div>
                <% } %>
                <% if(user) { %>
                    <div class="card text-center" style="width: 25rem;margin-right:20rem ;margin-top:3rem;float: right;height: 70px;border:none">
                          <img src="user-solid.svg" class="card-img-top" alt="...">
                          <p class="card-body">
                            <h5 class="card-title">Name: <%=user.firstname%> <%= user.lastname %></h5>
                            <h5 class="card-text">Department:<%= user.department%></h5><br>
                            <h5 class="card-title">Phone Number:<%=user.phoneno %></h5>
                            <h5 class="card-title">Email:<%=user.email %></h5>
                          </p>
                        </div>
                      <% } %>
                </body>
